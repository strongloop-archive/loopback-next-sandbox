{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "0.1.0",
  "tasks": [
    // build
    {
      "taskName": "Compile",
      "command": "tsc",
      "isShellCommand": true,
      "args": [
        "-p",
        "."
      ],
      "showOutput": "silent",
      "problemMatcher": "$tsc"
    },
    // run tests
    {
      "taskName": "Run tests",
      "command": "npm",
      "args": [
        "run",
        "test",
        "-s"
      ],
      "isTestCommand": true
    }
  ]
}